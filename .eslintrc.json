{
    "extends": ["eslint:recommended"],
    "plugins": [],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "globals": {
        "SharedArrayBuffer": true,
        "Atomics": true,
        "window": true,
        "document": true,
        "M": true,
        "parinfer": true,
        "ace": true,
        "React": true,
        "ReactDOM": true,
        "carlo": true,
        "rpc": true,
        "liyad": true,
        "lsx": true,
        "renderByMenneu": true,
        "loadFile": true,
        "saveFile": true,
        "listDirectory": true,
        "listDesktopDirectory": true,
        "listHomeDirectory": true,
        "fileExists": true,
        "pathJoin": true,
        "getDirName": true,
        "getBaseName": true,
        "getStartupFile": true,
        "openURL": true,
        "openNewWindow": true,
        "alert": true,
        "confirm": true
    },
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "warn",
        "no-empty": "warn"
    }
}
